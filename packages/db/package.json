{
	"name": "@saneatsu/db",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"description": "Database schema and utilities",
	"main": "./src/index.ts",
	"types": "./src/index.ts",
	"exports": {
		".": {
			"types": "./src/index.ts",
			"default": "./src/index.ts"
		},
		"./worker": {
			"types": "./src/worker.ts",
			"default": "./src/worker.ts"
		},
		"./src/schema": {
			"types": "./src/schema/index.ts",
			"default": "./src/schema/index.ts"
		},
		"./lib/contributions/contribution-aggregator": {
			"types": "./src/lib/contributions/contribution-aggregator.ts",
			"default": "./src/lib/contributions/contribution-aggregator.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch --preserveWatchOutput",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:studio": "drizzle-kit studio",
		"db:seed": "tsx src/seed.ts",
		"db:backfill-contributions": "tsx src/scripts/backfill-contributions.ts",
		"seed": "tsx src/seed.ts"
	},
	"dependencies": {
		"@libsql/client": "^0.15.15",
		"@t3-oss/env-core": "^0.13.10",
		"drizzle-orm": "^0.45.1",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"drizzle-kit": "^0.31.8",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
