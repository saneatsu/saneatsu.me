{
	"name": "@saneatsu/schemas",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"description": "Zod schemas for validation with i18n support",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch --preserveWatchOutput",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"zod": "^3.22.0",
		"@saneatsu/i18n": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.8.3"
	}
}
