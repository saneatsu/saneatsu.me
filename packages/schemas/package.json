{
	"name": "@saneatsu/schemas",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"description": "Zod schemas for validation with i18n support",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch --preserveWatchOutput",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"test": "vitest --passWithNoTests",
		"test:coverage": "vitest run --coverage --passWithNoTests"
	},
	"dependencies": {
		"@saneatsu/i18n": "workspace:*",
		"zod": "^4.3.5"
	},
	"devDependencies": {
		"typescript": "^5.9.3"
	}
}
