{
	"$schema": "https://biomejs.dev/schemas/2.3.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**/*.js",
			"**/*.jsx",
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"!!**/node_modules",
			"!!**/.next",
			"!!**/dist",
			"!!**/build",
			"!!**/.turbo",
			"!!**/mockServiceWorker.js"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"overrides": [
		{
			"includes": [
				"**/*.test.ts",
				"**/*.test.tsx",
				"**/*.stories.tsx",
				"**/test-utils/**",
				"**/vitest-setup.ts",
				"**/hono-client.ts",
				"**/api-client.ts",
				"**/auth.ts",
				"**/worker.ts",
				"**/remark-tag.ts",
				"apps/docs/**"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": ["**/multiple-selector/**"],
			"linter": {
				"rules": {
					"a11y": {
						"useSemanticElements": "off"
					}
				}
			}
		}
	],
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
			"trailingCommas": "es5"
		}
	}
}
