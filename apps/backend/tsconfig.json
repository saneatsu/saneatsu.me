{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"declaration": true,
		"declarationMap": true,
		"composite": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
