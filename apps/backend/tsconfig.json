{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": false,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true,
		"declarationMap": true,
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
