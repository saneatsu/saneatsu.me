# ================================
# Authentication (NextAuth.js)
# ================================

# Google OAuth 2.0 クライアントID
# 例: 123456789012-abcdefghijklmnopqrstuvwxyz123456.apps.googleusercontent.com
GOOGLE_CLIENT_ID=your-google-client-id

# Google OAuth 2.0 クライアントシークレット
# 例: GOCSPX-1234567890abcdefghijklmn
GOOGLE_CLIENT_SECRET=your-google-client-secret

# NextAuth URL (開発環境)
# 本番環境では https://saneatsu.me に変更
NEXTAUTH_URL=http://localhost:3333

# NextAuth シークレット (32文字以上のランダム文字列)
# 生成方法: openssl rand -base64 32
# 例: AbCdEfGhIjKlMnOpQrStUvWxYz1234567890abcd=
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-characters

# NextAuth.js Cloudflare Workers対応
AUTH_TRUST_HOST=true

# ================================
# API Configuration
# ================================

# Backend API URL
# 開発環境: http://localhost:3333
# 本番環境: https://api.saneatsu.me
NEXT_PUBLIC_API_URL=http://localhost:3333

# ================================
# Admin Settings
# ================================

# 管理者として許可するメールアドレス（カンマ区切り）
# 例: admin1@gmail.com,admin2@gmail.com
ADMIN_EMAILS=your-email@gmail.com

# ================================
# Basic Authentication
# ================================

# Basic認証設定（ログインページ保護用）
# ログインページへのアクセスを制限
BASIC_AUTH_USER=your-username
BASIC_AUTH_PASSWORD=your-password

# ================================
# Site Configuration
# ================================

# サイトのベースURL（OGP用）
# 本番環境: https://saneatsu.me
# 開発環境: http://localhost:3333
NEXT_PUBLIC_SITE_URL=https://saneatsu.me

# ================================
# Cloudflare Images
# ================================

# Cloudflare Imagesのアカウントハッシュ（画像URL生成用）
# 取得方法: Cloudflare Dashboard > Images > Account Hash (右上)
# 用途: 画像URL生成 (https://imagedelivery.net/{hash}/{imageId}/{variant})
# 例: abcdef1234567890
NEXT_PUBLIC_CLOUDFLARE_ACCOUNT_HASH=your-cloudflare-account-hash

