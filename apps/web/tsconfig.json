{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"incremental": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules", "**/*.bak", "**/*.bak/**", "**/**.bak/**", "src/**/*.bak/**", "src/stories.bak", "src/views/article-detail.bak"]
}
