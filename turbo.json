{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
		},
		"build:cloudflare": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**", ".wrangler/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"dev:worker": {
			"cache": false,
			"persistent": true
		},
		"deploy": {
			"dependsOn": ["build:cloudflare"],
			"cache": false
		},
		"deploy:dev": {
			"dependsOn": ["build:cloudflare"],
			"cache": false
		},
		"deploy:preview": {
			"dependsOn": ["build:cloudflare"],
			"cache": false
		},
		"deploy:prod": {
			"dependsOn": ["build:cloudflare"],
			"cache": false
		},
		"preview": {
			"cache": false,
			"persistent": true
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"type-check": {
			"dependsOn": ["^build"]
		},
		"test": {
			"dependsOn": ["^build"]
		},
		"clean": {
			"cache": false
		},
		"seed": {
			"cache": false
		}
	}
}
